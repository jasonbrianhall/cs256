/* PIXEL.CPP--Example from Getting Started */

// PIXEL.CPP demonstrates the Point and Location classes
// compile with POINT2.CPP and link with GRAPHICS.LIB

#include <graphics.h>   // declarations for graphics library
#include <conio.h>      // for getch() function
#include "point.h"      // declarations for Point and Location classes

int main()
{
   // initialize the graphics system
   int graphdriver = DETECT, graphmode;
   initgraph(&graphdriver, &graphmode, "..\\bgi");

   // move a point across the screen
   Point APoint(100, 50);   // Initial X, Y at 100, 50 for APoint
   APoint.Show();           // APoint turns itself on
   Point BPoint(200, 150);  // Initial X, Y at 200, 150 for BPoint                  // Wait for keypress
   BPoint.Show();           // BPoint turns itself on
   Point CPoint(300, 250);  // Initial X, Y at 300, 250 for CPoint
   CPoint.Show();           // CPoint turns itself on
   getch();
   APoint.MoveTo(400, 150); // APoint moves to 400,150
   BPoint.MoveTo(500, 150); // APoint moves to 500,150
   CPoint.MoveTo(600, 150); // APoint moves to 600,150
   getch();                 // Wait for keypress
   APoint.Hide();           // APoint turns itself off
   BPoint.Hide();           // BPoint turns itself off
   CPoint.Hide();           // CPoint turns itself off
   getch();                 // Wait for keypress
   closegraph();            // Restore original screen
   return 0;
}
